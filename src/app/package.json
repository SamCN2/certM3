{
  "name": "certm3-web",
  "version": "1.0.0",
  "description": "CertM3 Web Application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/server.ts",
    "build": "npm run clean && npm run build:ts && npm run build:webpack && npm run copy-assets",
    "build:ts": "tsc",
    "build:webpack": "webpack --config webpack.config.js",
    "copy-assets": "cp -r src/css ../../static/ && cp -r src/assets ../../static/ 2>/dev/null || true && cp src/views/*.html ../../static/views/ 2>/dev/null || true && cp src/js/request.js ../../static/js/request.js && cp src/js/validate.js ../../static/js/validate.js",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:routes": "ts-node tests/test-app.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "semantic-ui": "^2.4.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "axios": "^1.6.7",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.0.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
